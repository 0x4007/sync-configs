# Required environment variables for local testing
# Copy this file to .env and fill in your values

# Anthropic API key for Claude interactions
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Editor instruction for non-interactive mode
EDITOR_INSTRUCTION="insert all missing defaults"

# Set to false for non-interactive mode (matches GitHub Actions workflow)
INTERACTIVE=false

# Bot configuration
ACTOR=ubiquity-os[bot]
EMAIL=ubiquity-os[bot]@users.noreply.github.com

# GitHub authentication
AUTH_TOKEN=your_github_personal_access_token_here

# Optional: GitHub App authentication (if using GitHub App instead of PAT)
APP_ID=your_github_app_id_here
APP_PRIVATE_KEY=your_github_app_private_key_here
